# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb+srv://USUARIO:PASS@CLUSTER-xxx.mongodb.net/historiar?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d

# AWS S3 Configuration
# Get these credentials from AWS IAM Console
# 1. Create an IAM user with S3 permissions
# 2. Generate access keys for programmatic access
# 3. Create an S3 bucket in your preferred region
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
S3_BUCKET=historiar-storage

# Pre-Signed URL Expiration Times (in seconds)
# These control how long presigned URLs remain valid
# Longer times = better UX, shorter times = more secure
PRESIGNED_URL_EXPIRATION_IMAGES=86400      # 24 hours for images
PRESIGNED_URL_EXPIRATION_MODELS=172800     # 48 hours for 3D models
PRESIGNED_URL_EXPIRATION_DOCUMENTS=43200   # 12 hours for documents
PRESIGNED_URL_EXPIRATION_DEFAULT=86400     # 24 hours default

# API Configuration
API_BASE_URL=http://localhost:4000

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# In production, set this to your actual frontend URLs
# Example: https://admin.yourdomain.com,https://app.yourdomain.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:4000

